<%- include ('adminHeader') %>

<style>
  .table-bordered {
    border: 1px solid #000000;
  }

  .table-bordered th,
  .table-bordered td {
    border: 1px solid #000000;
  }

  .image-cell {
    width: 60px;
    height: 60px;
    padding: 5px;
  }

  .image-cell img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    display: block;
    margin: auto;
  }

  #productSearch {
    border: 1.5px solid #d1d1d1 !important;
    border-radius: 6px;
    background-color: #ffffff;
    padding: 10px 14px;
  }

  #productSearch:focus {
    border-color: #000000 !important;
    box-shadow: none !important;
  }
</style>

<section class="content-main">
  <div class="content-header">
    <div>
      <h2 class="content-title card-title">PRODUCT LIST</h2>
      <p>List of Products:</p>
    </div>
    <div>
      <a href="/admin/addproduct" class="btn btn-dark d-flex mb-3">Add Product</a>
    </div>
  </div>

  <div class="col-lg-4 mb-3">
    <input
      type="text"
      id="productSearch"
      class="form-control"
      placeholder="Search products..."
      value="<%= search || '' %>"
    >
  </div>

  <div class="col-lg-12">
    <% if (productSuccess.length > 0) { %>
    <script>
      Swal.fire({
        icon: "success",
        title: "Success",
        text: "<%= productSuccess %>",
        timer: 3000,
        showConfirmButton: false,
      });
    </script>
    <% } %>

    <% if (updateSuccess.length > 0) { %>
    <script>
      Swal.fire({
        icon: "success",
        title: "Success",
        text: "<%= updateSuccess %>",
        timer: 3000,
        showConfirmButton: false,
      });
    </script>
    <% } %>

    <div class="table-responsive">
      <% if(product !="" ) { %>
      <table class="table table-bordered mt-2 text-center">
        <thead>
          <tr class="table-primary">
            <th>SR.NO.</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Image</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% product.forEach((row,index)=> { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= row.name %></td>
            <td>
              <marquee behavior="scroll" direction="left"><%= row.description %></marquee>
            </td>
            <td><%= row.category?.name %></td>
            <td><%= row.price %></td>
            <td><%= row.totalstock %></td>
            <td class="image-cell">
              <img src="/<%= row.image[0] %>" style="max-width: 50px; max-height: 50px" alt="image">
            </td>
            <td><%= row.status ? 'Listed' : 'Unlisted' %></td>
            <td>
              <a class="btn btn-danger btn-sm rounded" onclick="confirmUnlist('<%= row._id %>')">
                <%= row.status ? 'Unlist' : 'List' %>
              </a>
              <a href="/admin/updateProduct/<%= row._id %>" class="btn btn-dark btn-sm rounded">update</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <% } else { %>
  <h1 class="text-center text-secondary mt-5">No Product found</h1>
  <% } %>

  <!-- Pagination -->
  <nav aria-label="Product navigation" class="mt-4">
    <ul class="pagination justify-content-centre">
      <% if(hasPreviousPage) { %>
      <li class="page-item">
        <a class="page-link" href="?page=1<%= search ? '&search=' + search : '' %>">First</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="?page=<%= previousPage %><%= search ? '&search=' + search : '' %>">Previous</a>
      </li>
      <% } %>

      <% for(let i=startPage; i <= endPage; i++) { %>
      <li class="page-item <%= i === currentPage ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %><%= search ? '&search=' + search : '' %>"><%= i %></a>
      </li>
      <% } %>

      <% if(hasNextPage) { %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= nextPage %><%= search ? '&search=' + search : '' %>">Next</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="?page=<%= lastPage %><%= search ? '&search=' + search : '' %>">Last</a>
      </li>
      <% } %>
    </ul>
  </nav>
</section>

<script>
  function confirmUnlist(itemId) {
    Swal.fire({
      title: "Are you sure?",
      text: "Are you sure you want to proceed?",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Confirm",
      cancelButtonText: "Cancel",
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/admin/unlist/" + itemId;
      }
    });
  }

  let debounceTimer;

  const productSearch = document.getElementById("productSearch");

  if (productSearch) {
    productSearch.addEventListener("input", function () {
      clearTimeout(debounceTimer);

      debounceTimer = setTimeout(() => {
        const searchValue = this.value.trim();
        window.location.href = `?page=1&search=${encodeURIComponent(searchValue)}`;
      }, 500);
    });
  }
</script>

<%- include ('adminfooter') %>
