<%- include('adminHeader') %>

<style>
  .table-bordered {
    border: 1px solid #000000;
  }

  .table-bordered th,
  .table-bordered td {
    border: 1px solid #000000;
  }

  #orderSearch {
    border: 1.5px solid #d1d1d1 !important;
    border-radius: 6px;
    background-color: #ffffff;
    padding: 10px 14px;
  }

  #orderSearch:focus {
    border-color: #000000 !important;
    box-shadow: none !important;
  }
</style>

<section class="content-main">
  <div class="content-header">
    <div>
      <h1 class="content-title card-title">Order List</h1>
      <p>List of orders:</p>
    </div>
    <div>
      <a href="/admin/returnrequests" class="btn btn-dark d-flex mb-3"
        >Return Requests</a
      >
    </div>
  </div>

  <div class="col-lg-4 mb-3">
    <input
      type="text"
      id="orderSearch"
      class="form-control"
      placeholder="Search orders..."
      value="<%= search || '' %>"
    />
  </div>

  <div class="col-lg-12 mt-4">
    <div class="table-responsive">
      <% if (orderDetails != '' ) { %>

      <table class="table table-bordered mt-2 text-center">
        <thead>
          <tr class="table-primary">
            <th style="width: 50px">ID</th>
            <th>Order Number</th>
            <th>Order Date</th>
            <th>Customer details</th>
            <th>Payment Method</th>
            <th>Order Total</th>
            <th>Coupon Discount</th>
            <th style="width: 200px">Action</th>
          </tr>
        </thead>

        <tbody>
          <% let itemNumber = (currentPage - 1) * limit + 1; %> <% for (let i =
          0; i < orderDetails.length; i++, itemNumber++) { %>
          <tr>
            <td><%= itemNumber %></td>
            <td><%= orderDetails[i].orderNumber || "N/A" %></td>
            <td><%= orderDetails[i].formattedCreatedAt %></td>

            <td>
              <% if (orderDetails[i].deliveryAddress &&
              orderDetails[i].deliveryAddress.length > 0) { %> <%=
              orderDetails[i].deliveryAddress[0].name %>, <%=
              orderDetails[i].deliveryAddress[0].mobile %>, <%=
              orderDetails[i].deliveryAddress[0].street %>, <%=
              orderDetails[i].deliveryAddress[0].state %>, <%=
              orderDetails[i].deliveryAddress[0].pincode %> <% } else { %> No
              address information available <% } %>
            </td>

            <td><%= orderDetails[i].paymentMethod %></td>
            <td>₹<%= orderDetails[i].orderAmount.toFixed(2) %></td>

            <td>
              <% if (orderDetails[i].couponDiscount &&
              orderDetails[i].couponDiscount > 0) { %> ₹<%=
              orderDetails[i].couponDiscount.toFixed(2) %> <% } else { %> No
              coupons applied <% } %>
            </td>

            <td>
              <a
                href="/admin/singleorder?orderId=<%= orderDetails[i]._id %>"
                class="btn border btn-dark view-btn"
              >
                View
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <% } else { %>
  <h1 class="text-center text-secondary mt-5">
    No Orders has been placed so far....!
  </h1>
  <% } %>

  <nav
    aria-label="Page navigation example"
    class="d-flex justify-content-centre my-4"
  >
    <ul class="pagination">
      <% if (hasPreviousPage) { %>
      <li class="page-item">
        <a
          class="page-link"
          href="/admin/orders?page=1<%= search ? '&search=' + search : '' %>"
          >First</a
        >
      </li>

      <li class="page-item">
        <a
          class="page-link"
          href="/admin/orders?page=<%= previousPage %><%= search ? '&search=' + search : '' %>"
        >
          Previous
        </a>
      </li>
      <% } else { %>
      <li class="page-item disabled"><span class="page-link">First</span></li>
      <li class="page-item disabled">
        <span class="page-link">Previous</span>
      </li>
      <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= currentPage === i ? 'active' : '' %>">
        <a
          class="page-link"
          href="/admin/orders?page=<%= i %><%= search ? '&search=' + search : '' %>"
        >
          <%= i %>
        </a>
      </li>
      <% } %> <% if (hasNextPage) { %>
      <li class="page-item">
        <a
          class="page-link"
          href="/admin/orders?page=<%= nextPage %><%= search ? '&search=' + search : '' %>"
        >
          Next
        </a>
      </li>

      <li class="page-item">
        <a
          class="page-link"
          href="/admin/orders?page=<%= lastPage %><%= search ? '&search=' + search : '' %>"
        >
          Last
        </a>
      </li>

      <% } else { %>
      <li class="page-item disabled"><span class="page-link">Next</span></li>
      <li class="page-item disabled"><span class="page-link">Last</span></li>
      <% } %>
    </ul>
  </nav>
</section>

<script>
  let orderDebounce;

  const orderSearch = document.getElementById("orderSearch");

  if (orderSearch) {
    orderSearch.addEventListener("input", function () {
      clearTimeout(orderDebounce);

      orderDebounce = setTimeout(() => {
        const value = this.value.trim();
        window.location.href = `/admin/orders?page=1&search=${encodeURIComponent(
          value
        )}`;
      }, 500);
    });
  }
</script>

<script>
  window.onload = function () {
    const couponSearch = document.getElementById("couponSearch");
    if (couponSearch) couponSearch.focus();
  };
</script>

<%- include('adminfooter') %>
