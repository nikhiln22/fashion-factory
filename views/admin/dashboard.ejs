    <script>
        // Sales Statistics Chart
        var ordersData = "<%- JSON.stringify(orderCounts) %>"
        console.log('ordersData:', ordersData);
        var revenueData = "<%- JSON.stringify(totalAmount) %>"
        console.log('revenueData:', revenueData);
        var discountData = "<%- JSON.stringify(totalCouponDiscount) %>"
        console.log('discountData:', discountData);
        var categories = "<%- JSON.stringify(categories) %>"
        console.log('categories:', categories);
        var text = "<%- JSON.stringify(text) %>"
        console.log('text:', text);


        var options = {
            series: [{
                name: 'Orders',
                type: 'column',
                data: ordersData
            }, {
                name: 'Revenue',
                type: 'line',
                data: revenueData
            }, {
                name: 'Discount',
                type: 'line',
                data: discountData
            }],
            chart: {
                height: 350,
                type: 'line',
            },
            stroke: {
                width: [0, 4]
            },
            title: {
                text: 'Sales Statistics'
            },
            dataLabels: {
                enabled: true,
                enabledOnSeries: [1, 2]
            },
            labels: categories,
            xaxis: {
                type: 'category'
            },
            yaxis: [{
                title: {
                    text: 'Orders',
                },
            }, {
                opposite: true,
                title: {
                    text: 'Revenue / Discount'
                },
            }],
            tooltip: {
                shared: true,
                intersect: false,
                y: {
                    formatter: function (val) {
                        return val + " ";
                    }
                }
            }
        };

        var chart = new ApexCharts(document.querySelector("#Chart"), options);
        chart.render();

        function updateChart(interval) {

            console.log(`Updating chart for ${interval}`);


            let newData = fetchDataForInterval(interval);


            ApexCharts.exec('yourChartId', 'updateSeries', newData);
        }

    </script>

    <script>
        // Best Selling Chart
        document.addEventListener('DOMContentLoaded', function () {
            let chart2;

            const updateChart = (url, itemDescription) => {
                axios.get(url)
                    .then((res) => {
                        const data = res.data.bestSellingProducts;
                        const categoryData = res.data.bestSellingCategories;

                        let labels = [];
                        let totalSales = [];
                        if (itemDescription === 'Products') {
                            labels = data.map(product => product.productId);
                            totalSales = data.map(product => product.totalSales);
                        } else {
                            labels = categoryData.map(product => product.categoryName);
                            totalSales = categoryData.map(product => product.totalSales);
                        }

                        const options = {
                            series: [{
                                name: `Total Sales`,
                                data: totalSales
                            }],
                            chart: {
                                height: 350,
                                type: 'bar'
                            },
                            title: {
                                text: `Best selling ${itemDescription}`
                            },
                            xaxis: {
                                categories: labels
                            }
                        };

                        if (chart2) {
                            chart2.destroy();
                        }

                        chart2 = new ApexCharts(document.querySelector("#chart2"), options);
                        chart2.render();
                    })
                    .catch((err) => {
                        console.log(err);
                    });
            };

            document.getElementById('bestProducts').addEventListener('click', function (e) {
                e.preventDefault();
                updateChart('/admin/bestsellingproducts', 'Products');
            });

            document.getElementById('bestCategory').addEventListener('click', function (e) {
                e.preventDefault();
                updateChart('/admin/bestsellingcategories', 'Categories');
            });

            // Initialize with Products
            updateChart('/admin/bestsellingproducts', 'Products');
        });
    </script>

