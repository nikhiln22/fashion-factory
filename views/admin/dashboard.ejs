        <div class="col-7 mt-5">

            <p class="btn btn-secondary mb-5" id="bestProducts" value="product">Best selling product</p>
            <p class="btn btn-secondary mb-5" id="bestCategory" value="category">Best selling Category</p>
            <div id="chart2"></div>
        </div>


