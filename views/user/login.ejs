<!-- Start login section  -->
<div class="login__section section--padding">
    <div class="container">
        <div class="mt-3">
            <% if(expressFlash.invalidpassword && expressFlash.invalidpassword.length> 0) { %>
                <div class="alert alert-danger" role="alert">
                    <%= expressFlash.invalidpassword %>
                </div>
                <% } %>
                    <% if(expressFlash.invaliduser && expressFlash.invaliduser.length> 0) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= expressFlash.invaliduser %>
                        </div>
                        <% } %>
        </div>
        <form action="/login" method="post"  onsubmit="return validateEmail() && validatePassword()">
            <div class="login__section--inner">
                <div class="row row-cols-md-2 row-cols-1">
                    <div class="col">
                        <div class="account__login">
                            <div class="account__login--header mb-25">
                                <h2 class="account__login--header__title h3 mb-10">Login</h2>
                            </div>
                            <div class="account__login--inner">
                                <input class="account__login--input" name="email" id="email" placeholder="Email Address" type="text" onblur="validateEmail()">
                                <span id="emailerror"></span>
                                <input class="account__login--input" name="password" id="Password" placeholder="Password" type="password" onblur="validatePassword()">
                                <span id="passwordError"></span>
                                <div class="account__login--remember__forgot mb-15 d-flex justify-content-between align-items-center">
                                    <button class="account__login--forgot" type="submit">Forgot Your Password?</button>
                                </div>
                                <button class="account__login--btn primary__btn" type="submit">Login</button>
                                <div class="account__login--divide">
                                    <span class="account__login--divide__text">OR</span>
                                </div>
                                <div class="account__social d-flex justify-content-center mb-15">
                                    <a class="account__social--link google" target="_blank" href="https://www.google.com/">Google</a>
                                </div>
                                <p class="account__login--signup__text">Don't Have an Account?  <a href="/signup">Signup</a></p>
                            </div>
                        </div>
                    </div>
                    <!-- Other content can be placed in the right column here -->
                </div>
            </div>
        </form>
    </div>     
</div>
