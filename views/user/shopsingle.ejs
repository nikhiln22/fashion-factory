        <script>
            function addToCart(event) {
                event.preventDefault();

                var sizes = document.getElementsByName("size");
                var sizeSelected = false;
                var selectedSize = '';

                for (var i = 0; i < sizes.length; i++) {
                    if (sizes[i].checked) {
                        sizeSelected = true;
                        selectedSize = sizes[i].value;
                        break;
                    }
                }

                if (!sizeSelected) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Please select a size.',
                        width: '400px',
                        padding: '2em',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'OK',
                        customClass: {
                            popup: 'custom-swal-popup',
                            title: 'custom-swal-title',
                            content: 'custom-swal-content',
                            confirmButton: 'custom-swal-confirm-button'
                        }
                    });
                    return false;
                }

                var productId = document.getElementById("addToCartForm").action.split('/').pop();

                fetch(`/addcart/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ size: selectedSize }),
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            window.location.href = '/cart';
                        } else {
                            let errorTitle = 'Error';
                            if (data.message.includes('out of stock') || data.message.includes('Stock limit reached')) {
                                errorTitle = 'Out of Stock';
                            }
                            Swal.fire({
                                icon: 'error',
                                title: errorTitle,
                                text: data.message,
                                width: '400px',
                                padding: '2em',
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: 'OK',
                                customClass: {
                                    popup: 'custom-swal-popup',
                                    title: 'custom-swal-title',
                                    content: 'custom-swal-content',
                                    confirmButton: 'custom-swal-confirm-button'
                                }
                            });
                        }
                    })
                    .catch((error) => {
                        console.error('Error:', error);

                        // Display SweetAlert message and then redirect to login
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Please login to continue.',
                            width: '400px',
                            padding: '2em',
                            confirmButtonColor: '#3085d6',
                            confirmButtonText: 'OK',
                            customClass: {
                                popup: 'custom-swal-popup',
                                title: 'custom-swal-title',
                                content: 'custom-swal-content',
                                confirmButton: 'custom-swal-confirm-button'
                            }
                        }).then(() => {
                            window.location.href = '/login';
                        });
                    });

                return false;
            }
        </script>
